<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DEE4E9"
    tools:context=".TypeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barChart"
                android:layout_width="375dp"
                android:layout_height="550dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="185dp"
                tools:layout_editor_absoluteX="0dp"
                android:background="@drawable/rectangle_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="416dp"
        android:layout_height="217dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-42dp"
        android:background="@drawable/rectangle_2" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="192dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_4" />

    <TextView
        android:id="@+id/report"
        android:layout_width="122dp"
        android:layout_height="54.21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/report"
        android:textAppearance="@style/title"
        android:textStyle="bold"
        android:gravity="center_horizontal|top" />

    <TextView
        android:layout_width="24.28dp"
        android:layout_height="54.21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:text="@string/dollar"
        android:textAppearance="@style/dollar"
        android:textStyle="bold"
        android:gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/type_money"
        android:layout_width="293dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="71dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:text="0.0"
        android:textAppearance="@style/report_money"
        android:textStyle="bold"
        android:gravity="center_horizontal|top" />

    <Button
        android:id="@+id/floating"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        android:background="@drawable/floating_button"
        android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <Button
            android:id="@+id/homeButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_button" />

        <Button
            android:id="@+id/inputButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button" />

        <Button
            android:id="@+id/typeButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/report_button" />

        <Button
            android:id="@+id/listButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:text="@string/home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="68dp"
            android:layout_marginBottom="5dp"
            android:text="@string/input"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="66dp"
            android:layout_marginBottom="5dp"
            android:text="@string/report"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="5dp"
            android:text="@string/list"/>
    </LinearLayout>
</RelativeLayout>
