<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:id="@+id/dollorsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:ems="20"
        android:hint="Enter Money"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:hint="Enter Note"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/inputFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEditText"
        android:layout_marginTop="71dp"
        android:text="Food" />

    <Button
        android:id="@+id/inputTransportationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEditText"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="73dp"
        android:layout_toRightOf="@+id/inputFoodButton"
        android:text="Transportation" />

    <Button
        android:id="@+id/inputStudyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEditText"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="73dp"
        android:layout_toRightOf="@+id/inputTransportationButton"
        android:text="Study" />

    <Button
        android:id="@+id/inputHousingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputFoodButton"
        android:layout_marginTop="60dp"
        android:text="Housing" />

    <Button
        android:id="@+id/inputEntertainmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputTransportationButton"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/inputHousingButton"
        android:text="Entertainment" />

    <Button
        android:id="@+id/inputShoppingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputStudyButton"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/inputEntertainmentButton"
        android:text="Shopping" />

    <Button
        android:id="@+id/inputCleaningButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputShoppingButton"
        android:layout_marginTop="60dp"
        android:text="Cleaning" />

    <Button
        android:id="@+id/inputPersonalCareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEntertainmentButton"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/inputCleaningButton"
        android:text="Personal Care" />

    <Button
        android:id="@+id/inputHobbyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputShoppingButton"
        android:layout_toRightOf="@+id/inputPersonalCareButton"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="Hobby" />

    <Button
        android:id="@+id/inputOtherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCleaningButton"
        android:layout_marginTop="60dp"
        android:text="Other" />

    <Button
        android:id="@+id/inputAddItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCleaningButton"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp"
        android:text="add item" />
</RelativeLayout>
